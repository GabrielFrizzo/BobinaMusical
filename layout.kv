# -*- coding: cp1252 -*-
#: import Clock kivy.clock.Clock


<TopOfEverything>:
    canvas:
        Color:
            rgba: .2,.7,1,.7
        Rectangle:
            size: self.size
            pos: self.pos
    MyScreenManager:
        MainMenu:

<MainMenu>:
    name: 'MainMenu'
    on_size: Clock.schedule_once(self.create_keyboard)
    FloatLayout:
        id: menu_background
        pos: root.pos
        size: root.size
        Image:
            id: piano_image
            source: 'piano.jpg'
            size_hint: 1, None
            height: root.width / self.image_ratio
            allow_stretch: True

<PButton>:
    always_release: True
    on_press: self.toggle_color(True)
    on_release:
        self.key_press()
        self.toggle_color(False)


                    



            
